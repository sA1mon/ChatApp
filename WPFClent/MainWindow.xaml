<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="Crypto Chat (RSA supported)" Height="650" Width="580" MinWidth="410" MinHeight="410">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="467*"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="556*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="ChatView" Grid.Row="0" Grid.ColumnSpan="2" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="MessageTextBox" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Margin="5" />
        <Button x:Name="SendButton" Content="SEND" Grid.Column="1" Grid.Row="1" Margin="5" FontSize="22" FontWeight="Bold" Click="SendButton_Click"/>
    </Grid>
</Window>
